<% provide(:title, "Home") %>
<% if user_signed_in? %>
	<h1>Today's Tasks</h1>
	<p><%= @task_items.count %> Tasks Pending Today</p>

	<div class="taskform section amber lighten-4">
		<%= render 'tasks/form' %>
	</div>

	<br>
	
	<div class="section amber lighten-4">
		<% if @task_items.any? %>
			<table id="task-table" class="hoverable">
				<tbody>
					<%= render @task_items %>
				</tbody>
			</table>
		<% end %>
	</div>

<% else %>
	<div class="section">
		<h1>Sign up to begin!</h1>
		<%= render :partial => 'devise/shared/signup_form' %>
	</div>
<% end %>
